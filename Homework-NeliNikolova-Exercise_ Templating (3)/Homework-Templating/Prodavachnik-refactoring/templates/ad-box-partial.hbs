<div class="add-box">
    <div class="ad-title" data-id="{{_id}}">
        {{title}}
        {{#if isAuthor}}
            <button class="add-control delete" >&#10006</button>
            <button class="add-control edit">&#9998</button>
        {{/if}}
    </div>
    <div>
        <img src="{{imageUrl}}"/>
    </div>
    <div> Price: {{price}} | By {{publisher}}</div>
</div>